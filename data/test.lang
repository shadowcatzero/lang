fn print(msg: slice<8>) {
   asm (a1 = msg) {
      ld a2, 8, a1
      ld a1, 0, a1
      li a0, 1
      li a7, 64
      ecall
   }
}

fn add(a: 64, b: 64) -> 64 {
   let c: 64 = 0;
   asm (t0 = a, t1 = b, a0 = c) {
      ld t0, 0, t0
      ld t1, 0, t1
      add t0, t0, t1
      sd t0, 0, a0
   };
   c
}

